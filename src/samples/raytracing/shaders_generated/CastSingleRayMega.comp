      coordsOfPoints[0] = firstHitWorld.x;
      coordsOfPoints[1] = firstHitWorld.y;
      coordsOfPoints[2] = firstHitWorld.z;
      //debugPrintfEXT("index_0 is %f", coordsOfPoints[0]);
      //debugPrintfEXT("index_1 is %f", coordsOfPoints[1]);
