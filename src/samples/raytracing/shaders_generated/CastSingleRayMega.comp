        coordsOfPoints[i * 3 + 4] = secondHitWorld.y;
        //debugPrintfEXT("index is %f", coordsOfPoints[i * 3 + 4]);

        coordsOfPoints[i * 3 + 5] = secondHitWorld.z;
        //debugPrintfEXT("index is %f", coordsOfPoints[i * 3 + 5]);
      }
    }
  }
